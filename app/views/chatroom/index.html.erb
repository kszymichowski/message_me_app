<h2 class="ui center aligned large icon header">
  <i class="orange circular paragraph icon"></i>
  Say Something
</h2>

<div class="ui two column grid">
    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content" id ="messages">
                <div class="ui feed" id="message-container">                   
                     <%= render @messages %>    
                </div>
            </div>
            <div class="extra content">
                <%= form_for(@message, url: message_path, remote: true, html: {class: "ui reply form", id: "form-index", role: "form"}) do |f| %>
                    <div class="field">
                        <div class="ui fluid icon input">
                            <%= f.text_field :body, placeholder: "Enter message here..."%>
                            <%= f.button '<i class= "bordered inverted orange edit icon"></i>'.html_safe, id: "submit-button" %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui inverted vertical menu">
                    <a class="active item">
                        Home
                    </a>
                    <a class="item">
                        Messages
                    </a>
                    <a class="item">
                        Friends
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
